<?xml version="1.0" encoding="UTF-8"?>
<nifty-styles>
    
    <style id="font16">
        <attributes font="Interface/Fonts/PoiretOne_16.fnt" width="*" align="center" valign="center" textHAlign="center" textVAlign="center"/>
    </style>
    
    <style id="font12">
        <attributes font="Interface/Fonts/PoiretOne_12.fnt" width="*" align="center" valign="center" textHAlign="center" textVAlign="center"/>
    </style>
    
    <style id="font24">
        <attributes font="Interface/Fonts/PoiretOne_24.fnt" width="*" align="center" valign="center" textHAlign="center" textVAlign="center"/>
    </style>
    
    <style id="font20">
        <attributes font="Interface/Fonts/PoiretOne_20.fnt" width="*" align="center" valign="center" textHAlign="center" textVAlign="center"/>
    </style>
    
    <style id="rubik_font12">
        <attributes font="Interface/Fonts/RubikMonoOne_12.fnt" width="*" align="center" valign="center" textHAlign="center" textVAlign="center"/>
    </style>

    <style id="titillium_font10">
        <attributes font="Interface/Fonts/Titillium_10.fnt" width="*" align="center" valign="center" textHAlign="center" textVAlign="center"/>
    </style>
    
    <style id="titillium_font12">
        <attributes font="Interface/Fonts/Titillium_12.fnt" width="*" align="center" valign="center" textHAlign="center" textVAlign="center"/>
    </style>
    
    <style id="titillium_font14">
        <attributes font="Interface/Fonts/Titillium_14.fnt" width="*" align="center" valign="center" textHAlign="center" textVAlign="center"/>
    </style>
    
    <style id="whiteBorder">
        <effect>
            <onStartScreen name="border" color="#FFF" border="1px" neverStopRendering="true"/>
        </effect>
    </style>
    
    <style id="grayBorder">
        <effect>
            <onStartScreen name="border" color="#AAA" border="1px" neverStopRendering="true"/>
        </effect>
    </style>
    
    <style id="horizontalBar">
        <attributes imageMode="resize:10,175,10,8,10,175,10,10,10,175,10,8" width="100%"/>
    </style>
    
    <style id="glassPanel">
        <attributes imageMode="resize:10,80,10,10,10,80,10,80,10,80,10,10"/>
    </style>
    
    <style id="componentButton">
        <effect>
            <onHover name="fade" start="#FFFFFF" end="#B3FFFF"/>
            <onDisabled name="fade" start="#FFFFFF" end="#B3FFFF"/>
            <onHover name="show" targetElement="#namePanel"/>
            <onEndHover name="hide" targetElement="#namePanel"/>
            <onClick name="imageSizePulsate" startSize="100%" endSize="110%" length="250" pulsator="SinusPulsator"/>
        </effect>
    </style>
    
    <style id="scroll">
        <attributes childLayout="center"/>
    </style>
    
    <style id="hover-text">
        <effect>
            <onHover name="fade" start="#FFFFFF" end="#B3FFFF"/>
            <onHover name="hide" targetElement="#mainText"/>
            <onHover name="show" targetElement="#hoverText"/>
            <onEndHover name="hide" targetElement="#hoverText"/>
            <onEndHover name="show" targetElement="#mainText"/>
            <onClick name="fade" start="#FFFFFF" end="#B3FFFF"/>
            <onDisabled name="imageOverlay" filename="Interface/Images/UI/glassPanel_red.png" imageMode="resize:10,80,10,10,10,80,10,80,10,80,10,10" post="true" overlay="true"/>
        </effect>
    </style>
    
    
  
</nifty-styles>
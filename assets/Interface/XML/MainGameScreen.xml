<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
   
    <useStyles filename="nifty-default-styles.xml" />
    <useStyles filename="Interface/XML/CustomStyles.xml" />
    <useControls filename="Interface/XML/CustomControls.xml" />
    
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- Main Game Screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="mainGame" controller="stellarclicker.app.MainGameScreenState">
        
        <layer id="background" childLayout="center">
            <image filename="Textures/Backgrounds/planetsBackground.png" width="100%" height="100%"></image>
        </layer>
        
        <layer id="mainUI" childLayout="horizontal">
            
            <!-- +++++++++++++++++++++++++++++++++++++++ -->
            <!-- Left Panel -->
            <!-- +++++++++++++++++++++++++++++++++++++++ -->
            <panel id="leftPanel" width="25%" height="100%" childLayout="vertical">
                
                <!-- SHIP COMPONENTS: IDs will match their ship component enumeration -->
                <control id="LIFE_SUPPORT" name="ship-component-div" compImage="Interface/Images/UI/squareRed.png" compLevel="1" />
                <control id="SHIELDS" name="ship-component-div" compImage="Interface/Images/UI/squareGreen.png" compLevel="1"/>
                <control id="WEAPONS" name="ship-component-div" compImage="Interface/Images/UI/squareYellow.png" compLevel="1"/>
                <control id="ENGINES" name="ship-component-div" compImage="Interface/Images/UI/squareRed.png" compLevel="1"/>
                <control id="HOLODECKS" name="ship-component-div" compImage="Interface/Images/UI/squareGreen.png" compLevel="1"/>
                <control id="REPLICATORS" name="ship-component-div" compImage="Interface/Images/UI/squareRed.png" compLevel="1"/>
               
            </panel>
            
            <!-- +++++++++++++++++++++++++++++++++++++++ -->
            <!-- Middle Panel -->
            <!-- +++++++++++++++++++++++++++++++++++++++ -->
            <panel id="middlePanel" width="50%" height="100%" childLayout="vertical">
                
                <panel height="20%"></panel>
                
                <panel height="60%" backgroundImage="Textures/Ships/mainShip_1.png"></panel>
                
                <panel height="20%"></panel>

            </panel>
            
            <!-- +++++++++++++++++++++++++++++++++++++++ -->
            <!-- Right Panel -->
            <!-- +++++++++++++++++++++++++++++++++++++++ -->
            <panel id="rightPanel" width="25%" height="100%" childLayout="vertical">
                
                <control id="money" name="money-div" height="17%"/>
                <control id="hull" name="ship-component-div" compEnum="HULL" compImage="Interface/Images/UI/squareGreen.png" compLevel="1" height="17%"/>
                
                <panel id="controlPanel" width="100%" height="60%" childLayout="vertical">
                    
                    <panel height="5%"></panel>
                    <control id="hullHealth" name="ship-statistic-text"/>
                    <control id="shieldHealth" name="ship-statistic-text"/>
                    <control id="engineSpeed" name="ship-statistic-text"/>
                    <control id="weaponDamage" name="ship-statistic-text"/>
                    <control id="officerHealth" name="ship-statistic-text"/>
                    <control id="officerHappiness" name="ship-statistic-text"/>
                    
                    <panel height="5%"></panel>
                    <panel height="30%" childLayout="horizontal">
                        
                        <control name="screen-button"/>
                        <control name="screen-button"/>
                        <control name="screen-button"/>

                    </panel>
                    
                    
                    
                </panel>
                
                <panel style="nifty-panel-no-shadow" padding="5px">
                </panel>
               
            </panel>
            
        </layer>
        
        <!-- +++++++++++++++++++++++++++++++++++++++ -->
        <!-- Officers Window -->
        <!-- +++++++++++++++++++++++++++++++++++++++ -->
        <layer id="officerUI" childLayout="absolute" visible="false">
            
            <control id="officerWindow" name="window" title="Officers" width="65%" height="65%" valign="center" align="center">
                <control name="scrollPanel" horizontal="false" height="100%">
                    
                    <panel childLayout="vertical">
                        
                        
                        
                    </panel>
                    

                </control>
            </control>
          
        </layer>
        
        <!-- +++++++++++++++++++++++++++++++++++++++ -->
        <!-- Senior Staff Window -->
        <!-- +++++++++++++++++++++++++++++++++++++++ -->
        <layer id="seniorStaffUI" childLayout="absolute" visible="false">
            
            <control id="seniorStaffWindow" name="window" title="Senior Staff" width="65%" height="65%" valign="center" align="center">
                <control name="scrollPanel" horizontal="false" height="100%">
                    
                    <panel childLayout="vertical">
                        
                        
                        
                    </panel>
                    

                </control>
            </control>
          
        </layer>
        
        <!-- +++++++++++++++++++++++++++++++++++++++ -->
        <!-- Unlocks Window -->
        <!-- +++++++++++++++++++++++++++++++++++++++ -->
        <layer id="unlocksUI" childLayout="absolute" visible="false">
            
            <control id="unlocksWindow" name="window" title="Unlocks" width="65%" height="65%" valign="center" align="center">
                <control name="scrollPanel" horizontal="false" height="100%">
                    
                    <panel childLayout="vertical">
                        
                        
                        
                    </panel>
                    

                </control>
            </control>
          
        </layer>
        
        <!-- +++++++++++++++++++++++++++++++++++++++ -->
        <!-- Travelling Window -->
        <!-- +++++++++++++++++++++++++++++++++++++++ -->
        <layer id="travelUI" childLayout="absolute" visible="false">
            
            <control id="travelWindow" name="window" title="Travel" width="65%" height="65%" valign="center" align="center">
                <control name="scrollPanel" horizontal="false" height="100%">
                    
                    <panel childLayout="vertical">
                        
                        
                        
                    </panel>
                    

                </control>
            </control>
          
        </layer>
        
        
        
        
        
    </screen>
    
</nifty>

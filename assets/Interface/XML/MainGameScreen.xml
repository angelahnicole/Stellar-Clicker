<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
   
    <useStyles filename="nifty-default-styles.xml" />
    <useStyles filename="Interface/XML/CustomStyles.xml" />
    <useControls filename="Interface/XML/CustomControls.xml" />
    
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- Main Game Screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="mainGame" controller="stellarclicker.app.MainGameScreenState">
        
        <layer id="background" childLayout="center">
            <image id="backgroundImage" filename="Textures/Backgrounds/planetsBackground.png" width="100%" height="100%"></image>
            
            <panel childLayout="horizontal">
                
                <panel width="20%"/>
                
                <panel width="60%" childLayout="center" padding="30%">
                    <image id="mainShipImage" filename="Textures/Ships/mainShip_1.png" width="100%" height="100%"/>
                </panel>
                
                <panel width="20%"/>
            </panel>
            
        </layer>
        
        <layer id="mainUI" childLayout="horizontal">
            
            <!-- +++++++++++++++++++++++++++++++++++++++ -->
            <!-- Left Panel -->
            <!-- +++++++++++++++++++++++++++++++++++++++ -->
            <panel id="leftPanel" width="30%" height="100%" childLayout="vertical">
                
                <!-- SHIP COMPONENTS: IDs will match their ship component enumeration -->
                <control id="LIFE_SUPPORT" name="ship-component-div" 
                         compName="LIFE SUPPORT" 
                         compImage="Textures/ShipComponents/lifeSupportComponent1.png" 
                         compLevel="1" />
                <control id="SHIELDS" name="ship-component-div" 
                         compName="SHIELDS" 
                         compImage="Textures/ShipComponents/shieldComponent1.png" 
                         compLevel="1"/>
                <control id="WEAPONS" name="ship-component-div" 
                         compName="WEAPONS" 
                         compImage="Textures/ShipComponents/weaponComponent1.png"
                         compLevel="1"/>
                <control id="ENGINES" name="ship-component-div" 
                         compName="ENGINES" 
                         compImage="Textures/ShipComponents/engineComponent1.png" 
                         compLevel="1"/>
                <control id="HOLODECKS" name="ship-component-div" 
                         compName="HOLODECKS" 
                         compImage="Textures/ShipComponents/holodeckComponent1.png" 
                         compLevel="1"/>
                <control id="REPLICATORS" name="ship-component-div" 
                         compName="REPLICATORS" 
                         compImage="Textures/ShipComponents/replicatorComponent1.png" 
                         compLevel="1"/>
               
            </panel>
            
            <!-- +++++++++++++++++++++++++++++++++++++++ -->
            <!-- Middle Panel -->
            <!-- +++++++++++++++++++++++++++++++++++++++ -->
            <panel id="middlePanel" width="40%" height="100%" childLayout="vertical">

            </panel>
            
            <!-- +++++++++++++++++++++++++++++++++++++++ -->
            <!-- Right Panel -->
            <!-- +++++++++++++++++++++++++++++++++++++++ -->
            <panel id="rightPanel" width="30%" height="100%" childLayout="vertical">
                
                <!-- MONEY SUMMARY -->
                <control id="money" name="money-component-div" height="17%"
                         compName="CLATINUM"
                         compImage="Interface/Images/Icons/clatinum.png" 
                         compMoney="20.0 K"/>
                
                <!-- HULL COMPONENT: IDs will match their ship component enumeration -->
                <control id="HULL" name="ship-component-div" height="17%" 
                         compName="HULL"
                         compImage="Textures/ShipComponents/hullComponent1.png" 
                         compLevel="1"/>
                
                <panel padding="7px" childLayout="center" width="100%">
                    <panel backgroundImage="Interface/Images/UI/glassPanel_light.png" style="glassPanel" width="100%" childLayout="vertical" padding="5px">

                        <panel height="1%"/>

                        <!-- SHIP STATISTICS -->
                        <panel height="68%" childLayout="vertical" padding="10px,5px" valign="center" align="center">
                            
                            <control id="hullHealth" name="ship-statistic-text" statHeight="16%" statImagePath="Interface/Images/Icons/hullHealth.png" statName="HULL HEALTH" statValue="001"/>
                            <control id="shieldHealth" name="ship-statistic-text" statHeight="16%" statImagePath="Interface/Images/Icons/shieldHealth.png" statName="SHIELD HEALTH" statValue="001"/>
                            <control id="engineSpeed" name="ship-statistic-text" statHeight="16%" statImagePath="Interface/Images/Icons/engineSpeed.png" statName="ENGINE SPEED" statValue="001"/>
                            <control id="weaponDamage" name="ship-statistic-text" statHeight="16%" statImagePath="Interface/Images/Icons/weaponDamage.png" statName="WEAPON DMG" statValue="001"/>
                            <control id="officerHealth" name="ship-statistic-text" statHeight="16%" statImagePath="Interface/Images/Icons/officerHealth.png" statName="OFFICER HEALTH" statValue="001"/>
                            <control id="officerHappiness" name="ship-statistic-text" statHeight="16%" statImagePath="Interface/Images/Icons/officerHappiness.png" statName="OFFICER HAPPINESS" statValue="001"/>
                            
                        </panel>

                        <panel height="1%"/>

                        <panel height="30%" childLayout="vertical">

                            <!-- WINDOW BUTTONS -->
                            
                            <panel height="50%" childLayout="horizontal">
                                <control id="officerButton" name="icon-button" iconImagePath="Interface/Images/Icons/officerIcon.png" hoverText="Officers" onClickMethod="openOfficerWindow()"/>
                                <control id="seniorStaffButton" name="icon-button" iconImagePath="Interface/Images/Icons/seniorStaffIcon.png" hoverText="Staff" onClickMethod="openSeniorStaffWindow()"/>
                            </panel>
                            
                            <panel height="50%" childLayout="horizontal">
                                <control id="unlocksButton" name="icon-button" iconImagePath="Interface/Images/Icons/unlocksIcon.png" hoverText="Unlocks" onClickMethod="openUnlocksWindow()"/>
                                <control id="travelButton" name="icon-button" iconImagePath="Interface/Images/Icons/travelsIcon.png" hoverText="Travel" onClickMethod="openTravelWindow()"/>
                                <control id="audioButton" name="icon-button" iconImagePath="Interface/Images/Icons/audioOnIcon.png" hoverText="Toggle" onClickMethod=""/>
                            </panel>

                        </panel>

                    </panel>

                    <panel height="1%"/>

                </panel>
                
            </panel> <!-- /RIGHT PANEL -->
            
        </layer>
        
        <!-- +++++++++++++++++++++++++++++++++++++++ -->
        <!-- Officers Window -->
        <!-- +++++++++++++++++++++++++++++++++++++++ -->
        <layer id="officerUI" childLayout="absolute">
            
            <control id="officerWindow" name="scrollPanelWindow" windowTitle="Officers" panelHeight="100%">

                    <panel childLayout="vertical" height="100%" padding="5px">
                        
                        <panel childLayout="horizontal" width="100%" height="40%">
                            
                            <control name="centeredHeadingDiv" headingText="OFFICERS CLAIMED">
                                <panel height="20%"/>
                                <text width="60%" id="#officersClaimedText" text="0.0 K" style="rubik_font20" color="#000000" wrap="true" textVAlign="center"/>
                                <panel height="20%"/>
                            </control>

                            <control name="centeredHeadingDiv" headingText="OFFICERS ATTRACTED">
                                <panel height="20%"/>
                                <text width="60%" id="#officersAttractedText" text="0.0 K" style="rubik_font20" color="#000000" wrap="true" textVAlign="center"/>
                                <panel height="20%"/>
                            </control>
                            
                        </panel>
                        
                        <panel childLayout="horizontal" width="100%" padding="5px" height="20%">
                            <image filename="Interface/Images/Icons/ensigns.png" width="33%" height="100%"/>
                            <control name="hover-text-button" mainText="CLAIM ATTRACTED OFFICERS" hoverText="CLAIM!" onClickMethod="" padding="10px" width="33%"/>
                            <image filename="Interface/Images/Icons/ensigns.png" width="33%" height="100%"/>
                        </panel>
                        
                        <panel childLayout="horizontal" width="100%" height="40%">
                            
                            <control name="centeredHeadingDiv" headingText="CLATINUM MULTIPLIER">
                                <panel height="20%"/>
                                <text height="60%" width="100%" id="#clatinumMultiplierText" text="0.0 K" style="rubik_font20" color="#000000" wrap="true" textVAlign="center"/>
                                <panel height="20%"/>
                            </control>

                            <control name="centeredHeadingDiv" headingText="CLATINUM PER SECOND">
                                <panel height="20%"/>
                                <text height="60%" width="100%" id="#clatinumPerSecondText" text="0.0 K" style="rubik_font20" color="#000000" wrap="true" textVAlign="center"/>
                                <panel height="20%"/>
                            </control>
                            
                        </panel>
                        
                    </panel>

            </control>
          
        </layer>
        
        <!-- +++++++++++++++++++++++++++++++++++++++ -->
        <!-- Senior Staff Window -->
        <!-- +++++++++++++++++++++++++++++++++++++++ -->
        <layer id="seniorStaffUI" childLayout="absolute">
            
            <control id="seniorStaffWindow" name="scrollPanelWindow" windowTitle="Senior Staff" panelHeight="1000px">
                
            </control>
          
        </layer>
        
        <!-- +++++++++++++++++++++++++++++++++++++++ -->
        <!-- Unlocks Window -->
        <!-- +++++++++++++++++++++++++++++++++++++++ -->
        <layer id="unlocksUI" childLayout="absolute">
            
            <control id="unlocksWindow" name="scrollPanelWindow" windowTitle="Unlocks" panelHeight="1000px">
                
            </control>
          
        </layer>
        
        <!-- +++++++++++++++++++++++++++++++++++++++ -->
        <!-- Travelling Window -->
        <!-- +++++++++++++++++++++++++++++++++++++++ -->
        <layer id="travelUI" childLayout="absolute">
            
            <control id="travelWindow" name="scrollPanelWindow" windowTitle="Travel" panelHeight="1000px">
                
            </control>
            
        </layer>
        
        
        
        
        
    </screen>
    
</nifty>

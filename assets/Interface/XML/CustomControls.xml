<?xml version="1.0" encoding="UTF-8"?>
<nifty-controls>
    
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- SHIP COMPONENT DIV -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <controlDefinition name="ship-component-div" controller="stellarclicker.app.ShipComponentUIController">

        <panel width="100%" childLayout="horizontal" padding="5px">

            <panel width="30%" childLayout="vertical">
                
                <!-- SHIP COMPONENT IMAGE / BUTTON -->
                <panel backgroundImage="Interface/Images/UI/shipComponentCircle_whiteBlack.png" childLayout="center" padding="10px" style="componentButton">
                    <interact onClick="gainExp()"></interact>
                    <image filename="$compImage" width="100%" height="100%"/>
                </panel>
                
                <!-- SHIP COMPONENT LEVEL BANNER -->
                <panel backgroundImage="Interface/Images/UI/shipComponentBanner_light.png" childLayout="center" width="100%">
                    <text id="#level" text="$compLevel" style="font16" color="#000000"/>
                </panel>

            </panel>
            
            <panel backgroundImage="Interface/Images/UI/glassPanel_dark.png" style="glassPanel" width="70%" childLayout="vertical" padding="5px" >
                
                <!-- SHIP COMPONENT PROGRESS BAR -->
                <panel backgroundImage="Interface/Images/UI/barHorizontal_gray.png" style="horizontalBar" height="50%" childClip="true" childLayout="absolute" padding="5px,0px">
                    <image filename="Interface/Images/UI/barHorizontal_green.png" style="horizontalBar" width="100%" height="100%" x="0%" y ="0"/>
                </panel>
                
                <!-- SHIP COMPONENT PROGRESS TIME LEFT -->
                <panel height="50%" childLayout="horizontal">
                    
                    <panel childLayout="center" padding="2px">
                        <panel backgroundImage="Interface/Images/UI/glassPanel_darker.png" style="glassPanel" childLayout="horizontal" height="100%" padding="10px">
                            <control id="#buyButton" name="button" label="Buy" width="*"/>
                            <control id="#repairButton" name="button" label="Repair" width="*"/>
                        </panel>
                    </panel>
                    
                    <panel childLayout="center" padding="2px">
                        <panel backgroundImage="Interface/Images/UI/glassPanel_darker.png" style="glassPanel" childLayout="center" height="100%" padding="10px">
                            <text id="#timeLeft" text="00:00:00" style="font16"/>
                        </panel>
                    </panel>
                    
                </panel>
                
            </panel>

        </panel>
    
    
    </controlDefinition>
    
    <controlDefinition name="money-div" style="" controller="">

        <panel width="100%" childLayout="horizontal" padding="5px">

            <panel style="nifty-panel-no-shadow" width="30%" childLayout="center"></panel>
            <panel style="nifty-panel-red-no-shadow" width="70%" childLayout="center"></panel>

        </panel>
    
    
    </controlDefinition>
    
    <controlDefinition name="ship-statistic-text" style="" controller="">

        <panel width="100%" childLayout="horizontal" padding="5px">

            <panel style="nifty-panel-no-shadow" width="20%" childLayout="center"></panel>
            <panel style="nifty-panel-red-no-shadow" width="50%" childLayout="center"></panel>
            <panel style="nifty-panel-no-shadow" width="30%" childLayout="center"></panel>

        </panel>
    
    
    </controlDefinition>
    
    <controlDefinition name="screen-button" style="" controller="">

        <panel childLayout="center" padding="5px">

            <panel style="nifty-panel-no-shadow" width="100%" childLayout="center"></panel>

        </panel>
    
    
    </controlDefinition>
  
    <controlDefinition name="senior-staff-div" style="" controller="">
      
    
    
    </controlDefinition>
  
    <controlDefinition name="unlocks-div" style="" controller="">
      
    
    
    </controlDefinition>
  
</nifty-controls>
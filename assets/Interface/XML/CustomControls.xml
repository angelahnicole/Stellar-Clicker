<?xml version="1.0" encoding="UTF-8"?>
<nifty-controls>
    
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- SHIP COMPONENT DIV -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <controlDefinition name="ship-component-div" controller="stellarclicker.app.ShipComponentUIController">

        <panel width="100%" childLayout="horizontal" padding="5px">

            <panel width="30%" childLayout="vertical">
                
                <!-- SHIP COMPONENT IMAGE / BUTTON -->
                <panel backgroundImage="Interface/Images/UI/shipComponentCircle_whiteBlack.png" childLayout="center">
                    <interact onClick="gainExp($compEnum)"></interact>
                    <image filename="$compImage" width="100%" height="100%"/>
                </panel>
                
                <!-- SHIP COMPONENT LEVEL BANNER -->
                <panel backgroundImage="Interface/Images/UI/shipComponentBanner_light.png" childLayout="center" width="100%">
                    <text id="level" text="$compLevel" font="Interface/Fonts/PoiretOne_16.fnt"/>
                </panel>

            </panel>
            
            <panel backgroundImage="Interface/Images/UI/glassPanel_dark.png" width="70%" childLayout="vertical" padding="5px">
                
                <!-- SHIP COMPONENT PROGRESS BAR -->
                <panel backgroundImage="Interface/Images/UI/barHorizontal_gray.png" width="100%" height="50%" childClip="true" childLayout="absolute" padding="5px">
                    <image filename="Interface/Images/UI/barHorizontal_green.png" width="100%" height="100%" x="-80%" y ="0"/>
                </panel>
                
                <!-- SHIP COMPONENT PROGRESS TIME LEFT -->
                <panel backgroundImage="Interface/Images/UI/glassPanel_dark.png" height="50%" childLayout="center">
                    <text id="timeLeft" text="00:00:00" font="Interface/Fonts/PoiretOne_16.fnt"/>
                </panel>
                
            </panel>

        </panel>
    
    
    </controlDefinition>
    
    <controlDefinition name="money-div" style="" controller="">

        <panel width="100%" childLayout="horizontal" padding="5px">

            <panel style="nifty-panel-no-shadow" width="30%" childLayout="center"></panel>
            <panel style="nifty-panel-red-no-shadow" width="70%" childLayout="center"></panel>

        </panel>
    
    
    </controlDefinition>
    
    <controlDefinition name="ship-statistic-text" style="" controller="">

        <panel width="100%" childLayout="horizontal" padding="5px">

            <panel style="nifty-panel-no-shadow" width="20%" childLayout="center"></panel>
            <panel style="nifty-panel-red-no-shadow" width="50%" childLayout="center"></panel>
            <panel style="nifty-panel-no-shadow" width="30%" childLayout="center"></panel>

        </panel>
    
    
    </controlDefinition>
    
    <controlDefinition name="screen-button" style="" controller="">

        <panel childLayout="center" padding="5px">

            <panel style="nifty-panel-no-shadow" width="100%" childLayout="center"></panel>

        </panel>
    
    
    </controlDefinition>
  
    <controlDefinition name="senior-staff-div" style="" controller="">
      
    
    
    </controlDefinition>
  
    <controlDefinition name="unlocks-div" style="" controller="">
      
    
    
    </controlDefinition>
  
</nifty-controls>